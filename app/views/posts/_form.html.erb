<div class="page-container">
  <div class="page-canvas">
    <div class="create-container">
      <%= form_for @post do |f| %>
        <div class="create-field">
          <div class="label">
            <%= f.label "title*"  %>
          </div>
          <div class="textarea">
            <% if @post.errors.any? %>
            <div id="error_explanation">
              <% @post.errors.full_messages.each do |msg| %>
                <%= msg %>
              <% end %>
            </div>
            <% end %>
            <%= f.text_area :title %>
          </div>
        </div>
        <div class="create-field">
          <div class="label">
            <%= f.label "text"  %>
          </div>
          <div class="textarea">
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="create-field">
          <div class="label">
              <%= f.label :image  %>
          </div>
          <%= f.file_field :image %>
        </div>
        <div class="create-field">
          <div class="label">
            <%= f.label :link  %>
          </div>
          <div class="">
            <%= f.text_area :link %>
          </div>
        </div>
        <div class="action">
          <%= f.submit class: "actions" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="back-container">
    <%= link_to 'Back', posts_path %>
  </div>
</div>
