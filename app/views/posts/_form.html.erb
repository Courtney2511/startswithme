<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "text(optional)"  %>
    <%= f.text_field :body %>
  </div>
  <div class="field">
    <%= f.label :link  %>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :image  %>
    <%= f.file_field :image %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>

