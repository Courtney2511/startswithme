<h1>Posts</h1>
<% @posts.each do |post| %>
  "<%= link_to post.body, post_path(post) %>" by <%= post.user.name %> |
  <%= link_to 'Edit', edit_post_path(post) %> |
  <%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'} %><br>
<% end %>
<br>
<%= link_to 'Create Post', new_post_path %>
