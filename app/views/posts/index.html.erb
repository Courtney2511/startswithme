<div class="posts-wrapper">


<table>
  <tbody>
    <% @posts.reverse_each do |post| %>
      <% if post.image? %>
      <div class="sdf">
        <tr>
          <th>
            <%= image_tag(post.image.thumb) %>
          </th>
          <td>
            <%= link_to post.title, post_path(post) %>
          </td>
        </tr>
        </div>
      <% else %>
      <div class="">
        <tr>
          <td colspan="2">
            <%= link_to post.title, post_path(post) %>
          </td>
        </tr>
      </div>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
