<div class="spacing">
</div>
<div class="posts-wrapper">
  <table>
    <tbody>
      <% @posts.reverse_each do |post| %>
        <% if post.image? %>
          <tr>
            <th>
              <%= image_tag(post.image.thumb) %>
            </th>
            <td>
              <div class="text-cont" id="text-cont">
                <div class="title-cont">
                  <p>
                    <%= link_to post.title, post_path(post) %>
                  </p>
                </div>
                <div class="author-cont">
                  <p>
                    posted <%= post.time_passed(Time.now) %> by <%= link_to post.user.name, user_path(post.user) %>
                  </p>
                </div>
                <div class="comment-cont">
                  <p>
                    <%= post.comments.length %> comment<% if post.comments.length > 1 %>s<% end %>
                  </p>
                </div>
                <% if post.user == current_user %>
                  <div class="action-container">
                    <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'} %>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        <% else %>
          <tr>
            <td colspan="2">
              <div class="text-cont" id="first-text-cont">
                <div class="title-cont">
                  <p>
                    <%= link_to post.title, post_path(post) %>
                  </p>
                </div>
                <div class="author-cont">
                  <p>
                    posted <%= post.time_passed(Time.now) %> by <%= link_to post.user.name, user_path(post.user) %>
                  </p>
                </div>
                <div class="comment-cont">
                  <p>
                    <%= post.comments.length %> comment<% if post.comments.length > 1 %>s<% end %>
                  </p>
                </div>
                <% if post.user == current_user %>
                  <div class="action-container">
                    <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'} %>
                  </div>
                <% end %>
              </div>
             </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
