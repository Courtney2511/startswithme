<h1>All Posts</h1>
<% @posts.each do |post| %>
  "<%= link_to post.body, post_path(post) %>" by <%= post.user.name %>
  <% if post.user == current_user %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: {confirm: 'Are you sure?'} %>
  <% end %>
  <br>
<% end %>
<br>
<%= link_to 'Create Post', new_post_path %>
