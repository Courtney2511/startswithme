<!DOCTYPE html>
<html>
    <head>
        <title>State Of Our Mind</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link href='https://fonts.googleapis.com/css?family=Marck+Script' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="http://s.mlcdn.co/animate.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body>
        <header class="clearix">
            <nav class="nav-stick">
                <h1 class='logo'><%= link_to 'State of Our Mind', posts_path %></h1>

                <ul class='nav-list'>
                    <% if current_user %>
                    <li class='nav-item' id='create-post'>
                        <%= link_to 'CREATE', new_post_path %>
                    </li>
                    <li class='nav-item'>
                        <%=link_to current_user.name, user_path(current_user) %>
                    </li>
                    <li class='nav-item'>
                        <%= link_to "Log Out", session_path("current"), :method => :delete %>
                    </li>
                <% else %>
                    <li class='nav-item' id='signin'>
                        <%= link_to "Log In", new_session_path %>
                    </li>
                    <li class='nav-item' id='signup'>
                        <%=link_to "Sign Up", new_user_path %>
                    </li>
                    <% end %>
                </ul>
            </nav>
        </header>

        <%= yield %>

    </body>
  </body>

  <footer>
    <div class="footer-info expressions">
      <h3>EXPRESSIONS</h3>
      <a href="latest_photos.html">Photos</a>
      <a href="latest_photos.html">Blogs</a>
      <a href="latest_photos.html">Videos</a>
    </div>
    <div class="footer-info help">
      <h3>HELP AND SUPPORT</h3>
      <%=link_to "Helpful links", static_pages_links_path %>
      <a href="https://startswithme.ca/">Starts With Me</a>
      <a href="https://www.facebook.com/mike.startswithme">Starts With Me Facebook</a>
      <a href="https://twitter.com/StartsWithMe_">Starts With Me Twitter</a>
    </div>
    <div class="footer-info information">
      <h3>ABOUT</h3>
      <%=link_to "ABOUT", static_pages_about_path %>
      <%=link_to "PRIVACY POLICIES", static_pages_privacy_path %>
      <%=link_to "Terms and Conditions", static_pages_terms_path %>
    </div>
  </footer>
</html>
