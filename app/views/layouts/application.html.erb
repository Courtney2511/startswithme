<!DOCTYPE html>
<html>
  <head>
    <title>StartsWithMe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
        <p id="notice">
          <%= flash[:notice] %>
        </p>
      <% end %>

    <%= yield %>

    <p class="user-info">
      <% if current_user %>
        Welcome <%= current_user.name %>! <%= link_to "Log Out", session_path("current"), :method => :delete %>
      <% else %>
        <% link_to "Log In", new_session_path %> or <%=link_to "Sign Up", new_user_path %>
      <% end %>
    </p>

  </body>
</html>
