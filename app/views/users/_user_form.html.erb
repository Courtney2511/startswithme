

<%= form_for @user do |f| %>
  <% if @user == current_user %>
    <div class="field">
  <%= image_tag(@user.profile_picture) %>
      <%= f.label :change_your_profile_picture %>
      <%= f.file_field :profile_picture %>
    </div>
    <div class="field">
    <h4><%= @user.description %></h4>

      <%= f.label :edit_your_description %>
      <%= f.text_field :description %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
    <% else %>

  <% end %>

  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, 'error') %> prohibited this image from being uploaded:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <% end %>
<% end %>
