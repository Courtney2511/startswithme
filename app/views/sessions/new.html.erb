<!-- Container -->
<div class="modal-signin">
  <!-- Form -->
  <%= form_tag sessions_path, class: "getstarted" do %>
  <!-- login Header -->
  <div class="login-header">
    <p class="close">x</p>
    <h1>LOGIN</h1>
  </div>
  <!-- Login fields -->
  <div class="field">
    <%= text_field_tag :email, nil, class:"session-input", :placeholder => "email"%><br> <!--input tag-->
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, class:"session-input", :placeholder => ".........." %> <!--input tag-->
  </div>
  <!-- Login Button -->
  <div>
    <%= submit_tag "LOG IN", class:"actions" %>
  </div>
  <!-- Forgot Password & Sign Up Button -->
  <div class="extra-login-stuff">
    <%= link_to 'Forgot Password', new_password_reset_path %><br>
    <a id='signup'>
      Sign Up
    </a>
  </div>
  <% end %>
</div>


<!-- signup modal -->
<div class="modal-signup">


<%= form_for @user do |f| %>
  <!-- notice if failure to input valid data -->
  <% if @user.errors.any? %>
    <div class="error_messages">
       <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
     <% end %>
      </ul>
    </div>
  <%end%>

  <!-- Sign Up Header -->
  <div class="error_messages"></div>
  <div class="login-header">
    <p class="close">x</p>
    <h1>SIGN UP</h1>
  </div>
  <!-- Sign Up Fields -->
  <div class="field">
    <%= f.text_field :name, class:"session-input", :placeholder => "name" %>
  </div>
  <div class="field">
    <%= f.text_field :email, class:"session-input", :placeholder => "email" %>
  </div>
  <div class="field">
    <%= f.password_field :password, class:"session-input", :placeholder => "password" %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, class:"session-input", :placeholder => "confirm password" %>
  </div>
  <!-- Sign Up Button -->
  <div class="button">
    <%= f.submit 'SIGN UP', :class => 'actions actions-signup' %>
  </div>
<!-- </div> -->
<% end %>
</div>

<!-- Banner -->
<div class="top-screen">
  <div class="clearfix">
    <div class="banner">
      <div class="banner-text">
        <p>An online community aimed at fostering youth empowerment and support</p>
      </div>
    </div>
  </div>
</div>

