
<!-- Container -->
<div class="modal">
  <!-- Form -->
  <%= form_tag sessions_path, class: "getstarted" do %>
  <!-- login Header -->
  <div class="login-header">
    <h1>Log In</h1>
    <button class="close">x</button>
  </div>
  <!-- Login fields -->
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %><br> <!--input tag-->
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %> <!--input tag-->
  </div>
  <!-- Login Button -->
  <div>
    <%= submit_tag "Log in", class:"actions" %>
  </div>
    <!-- Forgot Password & Sign Up Button -->
    <%= link_to 'Forgot Password?', new_password_reset_path %>
    <%= link_to 'Sign Up', new_user_path %>
  <% end %>
</div>

<!-- Banner -->
<div class="top-screen">
  <div class="clearfix">
    <div class="banner">
      <div class="banner-text">
        <!-- <p>An online community aimed at fostering youth empowerment and support</p> -->
      </div>
    </div>
  </div>
</div>

<script>
$( document ).ready(function() {
  $('.signin').on('click', function(event){
    event.preventDefault();
    // modal will display on click
    $('.modal')
      .css("display","block");
    });
    // modal will close when 'x' is clicked
  $('.close').on('click', function(){
    $('.modal')
      .css("display","none");
    });
  // an error class will be added if no field in entered
  $('.actions').on('click', function(event){
    if($(input).val() == ''){
       event.preventDefault();
    }
    $('input').addClass("error");
    });

  $('input').on('click',function(){
    $(this).removeClass('error');
    });
});
</script>


